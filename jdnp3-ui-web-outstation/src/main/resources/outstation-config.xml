<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<bean id="executorService" class="java.util.concurrent.Executors" factory-method="newFixedThreadPool">
		<constructor-arg value="2" />
	</bean>
	
	<bean id="dataPump" class="net.sf.jdnp3.dnp3.stack.nio.DataPump" />
	<bean class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
		<property name="targetObject" ref="dataPump" />
		<property name="targetMethod" value="start" />
	</bean>
	
	<bean id="dataLinkService-20000" class="net.sf.jdnp3.dnp3.stack.layer.datalink.service.concurrent.tcp.server.TcpServerDataLinkService">
		<property name="executorService" ref="executorService" />
		<property name="dataPump" ref="dataPump" />
		<property name="port" value="20000" />
	</bean>
	<bean class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
		<property name="targetObject" ref="dataLinkService-20000" />
		<property name="targetMethod" value="start" />
	</bean>
	
